{
  "extends": [
    "config:base"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "schedule": ["before 6am on Monday", "after 10pm on Sunday"],
  "automerge": true,
  "automergeType": "branch",
  "packageRules": [
    {
      "packageNames": ["prismagraphql/prisma", "prisma"],
      "groupName": "prisma",
      "automerge": false
    },
    {
      "packagePatterns": ["^eslint", "^prettier"],
      "groupName": "prettier and eslint",
      "automerge": false
    },
    {
      "packagePatterns": ["^@graphql-codegen"],
      "groupName": "@graphql-codegen",
      "automerge": false
    }
  ]
}
