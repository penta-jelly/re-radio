{
  "editor.wordWrap": "off",
  "editor.tabSize": 2,
  "[typescript]": {
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true
  },
  "emmet.includeLanguages": {
    "typescript": "typescriptreact"
  },
  "emmet.excludeLanguages": [
    "markdown", "typescript"
  ],
  "typescript.tsdk": "./common/node_modules/typescript/lib",
  "eslint.enable": true,
  "eslint.workingDirectories": [
		{ "directory": "./client", "changeProcessCWD": true },
		{ "directory": "./server", "changeProcessCWD": true },
		{ "directory": "./common", "changeProcessCWD": true },
		{ "directory": "./e2e", "changeProcessCWD": true }
  ],
  "cSpell.words": [
    "Catchable",
    "Chainable",
    "Embeddable",
    "maxsize",
    "notistack",
    "timestamptz",
    "uncolorize"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "files.exclude": {
		".git": true,
		".build": true,
		"**/.DS_Store": true,
		"**/dist/**/*": true,
		"**/build/**/*": true,
		"server/lib/**/*.js": true,
		"common/lib/**/*.js": true
  },
  "files.watcherExclude": {
		"**/.git/objects/**": true,
		"**/.git/subtree-cache/**": true,
		"**/node_modules/**": true,
		"**/lib/**": true
	},
}
