type User {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  email: String! @unique
  username: String @unique
  password: String!
  name: String
  country: String
  city: String
  bio: String
  avatarUrl: String
  coverUrl: String
  reputation: Int @default(value: 0)
  facebookId: String
  googleId: String
  roles: [UserRole!]! @relation(link: INLINE)
}

type UserRole {
  id: ID! @id
  role: UserRoleEnum!
  stationId: String
  user: User!
}

enum UserRoleEnum {
  ADMIN
  STATION_OWNER
}
