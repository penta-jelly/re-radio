type User {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  email: String! @unique
  username: String! @unique
  password: String!
  name: String
  country: String
  city: String
  bio: String
  avatarUrl: String
  coverUrl: String
  reputation: Int @default(value: 0)
  facebookId: String
  googleId: String
  roles: [UserRole!]! @relation(name: "UserRole", onDelete: CASCADE)
}

type UserRole {
  id: ID! @id
  user: User! @relation(name: "UserRole")
  role: UserRoleEnum!
  station: Station @relation(name: "StationUserRole")
}

enum UserRoleEnum {
  ADMIN
  STATION_OWNER
  STATION_ADMIN
}

type Station {
  # Information
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  name: String! @unique
  slug: String! @unique
  description: String
  userRoles: [UserRole!]! @relation(name: "StationUserRole")
  tags: [StationTag!]! @relation(name: "StationsAndTags", onDelete: CASCADE)
  # Realtime part
  onlineUsers: [User!]! @relation(name: "StationOnlineUsers")
  songs: [Song!]! @relation(name: "StationPlaylist", onDelete: CASCADE)
}

type StationTag {
  id: ID! @id
  name: String!
  stations: [Station!]! @relation(name: "StationsAndTags")
}

type Song {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  title: String!
  url: String!
  thumbnail: String!
  duration: Int!
  creator: User! @relation(name: "UserSongCreator")
  station: Station! @relation(name: "StationPlaylist")
  status: SongStatusEnum!
  startedAt: DateTime
  upVotes: [User!]! @relation(name: "UserSongUpVotes")
  downVotes: [User!]! @relation(name: "UserSongDownVotes")
}

enum SongStatusEnum {
  PENDING
  PLAYING
  PLAYED
  SKIPPED
}
